<UserControl x:Class="Moodify.View.WelcomeScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Moodify.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
		<Button Content="Sign in" Height="50" HorizontalAlignment="Center" Margin="120,120,0,0" Name="SignIn" VerticalAlignment="Top" Width="80" Click="OnSignIn"/>
		<Button Content="Register" Height="50" HorizontalAlignment="Center" Margin="-130,120,0,0" Name="Register" VerticalAlignment="Top" Width="80" Click="OnRegister"/>
	</Grid>
</UserControl>
