<Window x:Class="Moodify.View.CreatePlaylistView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Moodify.View"
        mc:Ignorable="d"
        Title="Create Playlist" Height="450" Width="800">
    <StackPanel Background="LightBlue">
        <Label HorizontalAlignment="Left" Content="Let's create a playlist!" FontSize="30" FontWeight="Bold" Foreground="BlueViolet" Padding="10"/>
        <Label HorizontalAlignment="Center" Content="First, choose how many songs you'd like in your playlist" FontSize="20" FontWeight="Thin"></Label>
        <Slider Name="a" HorizontalAlignment="Stretch" Maximum="12" TickPlacement="BottomRight" TickFrequency="1" IsSnapToTickEnabled="True" Margin="10,10,10,10" Value="{Binding VM_NumOfSongs}"/>
		<TextBlock FontSize="25" Margin="120,50,150,0" Text="{Binding VM_NumOfSongs, StringFormat=List length: {0}}"></TextBlock>
    </StackPanel>
</Window>
