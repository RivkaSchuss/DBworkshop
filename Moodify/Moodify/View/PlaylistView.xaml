<Window x:Class="Moodify.View.PlaylistView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Moodify.View"
        mc:Ignorable="d"
        Title="Playlist" Height="450" Width="800">
    <StackPanel>
        <Label HorizontalAlignment="Center" Content="{Binding VM_Playlist.PlaylistName}" FontSize="25" FontWeight="Bold" Foreground="Blue" Padding="10"/>
        <ListBox ItemsSource="{Binding VM_Playlist.Songs}" ScrollViewer.CanContentScroll="True" Width="Auto" Height="Auto">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" Margin="10,10,10,10">
                        <TextBlock Text="{Binding SongName}" Margin="10, 10, 10, 10"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

    </StackPanel>
</Window>
